{% extends 'base.html.twig' %}

{% block title %}Change index{% endblock %}

{% block body %}
    <h1>Change index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Date</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for change in changes %}
            <tr>
                <td>{{ change.id }}</td>
                <td>{{ change.type }}</td>
                <td>{{ change.date ? change.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ change.amount}}</td>
                <td>{{ change.product.description }}</td>
                <td>
                    <a href="{{ path('app_change_show', {'id': change.id}) }}">show</a>
                    <a href="{{ path('app_change_edit', {'id': change.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_change_new') }}">Create new</a>
{% endblock %}
